<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alap témák (nem módosítottuk őket, hogy megőrizzék a fallback működést) -->
    <style name="Theme.TermuxApp.Light.DarkActionBar" parent="Theme.BaseActivity.Light.DarkActionBar"/>
    <style name="Theme.TermuxApp.Light.NoActionBar" parent="Theme.BaseActivity.Light.NoActionBar"/>
    <style name="Theme.TermuxApp.DayNight.DarkActionBar" parent="Theme.BaseActivity.DayNight.DarkActionBar"/>
    <style name="Theme.TermuxApp.DayNight.NoActionBar" parent="Theme.BaseActivity.DayNight.NoActionBar"/>

    <!-- CRT foszforzöld TermuxActivity téma -->
    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.TermuxApp.DayNight.NoActionBar">

        <!-- Foszforzöld fő szín -->
        <item name="colorPrimary">#00ff66</item>
        <item name="colorPrimaryVariant">#00ff66</item>

        <!-- Háttér: sötét, enyhén olívazöldes fekete -->
        <item name="android:windowBackground">#001a0f</item>

        <!-- Kijelölés, áttűnések -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Bal oldali navigációs fiók -->
        <item name="buttonBarButtonStyle">@style/TermuxActivity.Drawer.ButtonBarStyle.CRT</item>
        <item name="termuxActivityDrawerBackground">#001a0f</item>
        <item name="termuxActivityDrawerImageTint">#00ff66</item>

        <!-- Extra billentyűk -->
        <item name="extraKeysButtonTextColor">#00ff00</item>
        <item name="extraKeysButtonActiveTextColor">#00ff66</item>
        <item name="extraKeysButtonBackgroundColor">#001a0f</item>
        <item name="extraKeysButtonActiveBackgroundColor">#004d2a</item>
    </style>

    <!-- Bal oldali gombsáv CRT-stílusban -->
    <style name="TermuxActivity.Drawer.ButtonBarStyle.CRT" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColor">#00ff66</item>
        <item name="android:background">#001a0f</item>
    </style>

</resources>
