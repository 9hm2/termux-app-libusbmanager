<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alap témák (változatlanul hagyva) -->
    <style name="Theme.TermuxApp.Light.DarkActionBar" parent="Theme.BaseActivity.Light.DarkActionBar"/>
    <style name="Theme.TermuxApp.Light.NoActionBar" parent="Theme.BaseActivity.Light.NoActionBar"/>
    <style name="Theme.TermuxApp.DayNight.DarkActionBar" parent="Theme.BaseActivity.DayNight.DarkActionBar"/>
    <style name="Theme.TermuxApp.DayNight.NoActionBar" parent="Theme.BaseActivity.DayNight.NoActionBar"/>

    <!-- CRT foszforzöld TermuxActivity téma -->
    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.TermuxApp.DayNight.NoActionBar">

        <!-- Foszforzöld fő szín -->
        <item name="colorPrimary">@color/crt_green</item>
        <item name="colorPrimaryVariant">@color/crt_green</item>

        <!-- Háttér: CRT-sötét -->
        <item name="android:windowBackground">@color/crt_background</item>

        <!-- Animációs és overlay beállítások -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Navigációs fiók -->
        <item name="buttonBarButtonStyle">@style/TermuxActivity.Drawer.ButtonBarStyle.CRT</item>
        <item name="termuxActivityDrawerBackground">@color/crt_background</item>
        <item name="termuxActivityDrawerImageTint">@color/crt_green</item>

        <!-- Extra billentyűk -->
        <item name="extraKeysButtonTextColor">@color/crt_green_alt</item>
        <item name="extraKeysButtonActiveTextColor">@color/crt_green</item>
        <item name="extraKeysButtonBackgroundColor">@color/crt_background</item>
        <item name="extraKeysButtonActiveBackgroundColor">@color/crt_background</item>
    </style>

</resources>
