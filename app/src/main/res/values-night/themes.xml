<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CRT-foszforzöld stílusú TermuxActivity téma -->
    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.TermuxApp.DayNight.NoActionBar">

        <!-- Alapszín -->
        <item name="colorPrimary">@color/crt_green</item>
        <item name="colorPrimaryVariant">@color/crt_green</item>

        <!-- Háttér -->
        <item name="android:windowBackground">@color/crt_background</item>

        <!-- Szövegkijelölés overlay ne tolja el a tartalmat -->
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Navigációs fiók -->
        <item name="buttonBarButtonStyle">@style/TermuxActivity.Drawer.ButtonBarStyle.CRT</item>
        <item name="termuxActivityDrawerBackground">@color/crt_background</item>
        <item name="termuxActivityDrawerImageTint">@color/crt_green</item>

        <!-- Extra billentyűk -->
        <item name="extraKeysButtonTextColor">@color/crt_green_alt</item>
        <item name="extraKeysButtonActiveTextColor">@color/crt_green</item>
        <item name="extraKeysButtonBackgroundColor">@color/crt_background</item>
        <item name="extraKeysButtonActiveBackgroundColor">@color/crt_background_active</item>
    </style>

    <!-- Gombsáv CRT-stílusban -->
    <style name="TermuxActivity.Drawer.ButtonBarStyle.CRT" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/crt_green</item>
        <item name="android:background">@color/crt_background</item>
    </style>
</resources>
